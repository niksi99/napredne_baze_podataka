@{
}

<h1>Objavi Novi Dodadjaj</h1>


<div class = "container pt-5">
    <div class = "row">
        <div class = "col-md-6">
            <h4>Add Dogadjaj</h4>
            <form asp-action="Add" method="POST">
                <div class="form-group">
                    <label asp-for="Organizator">Organizuje</label>
                    <input type="text" class="form-control" asp-for="Organizator" />
                    <span asp-validation-for="Organizator" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Naziv">Naziv</label>
                    <input type="text" class="form-control" asp-for="Naziv" />
                    <span asp-validation-for="Naziv" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BrojUcesnika ">Broj ucenika</label>
                    <input type="text" class="form-control" asp-for="BrojUcesnika" />
                    <span asp-validation-for="BrojUcesnika" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TrenutniBrojUcesnika ">TrenutniBrojUcesnika</label>
                    <input type="text" class="form-control" asp-for="TrenutniBrojUcesnika" />
                    <span asp-validation-for="TrenutniBrojUcesnika" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="Opis ">Opis</label>
                    <input type="textarea" class="form-control" asp-for="Opis" />
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>
               @* <div class="form-group">
                    <label asp-for="Kategorije ">Kategorije *</label>
                    <input type="text" class="form-control" asp-for="Kategorije" />
                    <span asp-validation-for="Kategorije" class="text-danger"></span>
                </div>*@
                <div class="form-group">
                    <label asp-for="Lokacija ">Lokacija</label>
                    <input type="textarea" class="form-control" asp-for="Lokacija" />
                    <span asp-validation-for="Lokacija" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit">Objavi</button>
                    <a href="/Dogadjaj/GetAll">Svi dogadjaji</a>
                </div>
            </form>
        </div>

    </div>
</div>