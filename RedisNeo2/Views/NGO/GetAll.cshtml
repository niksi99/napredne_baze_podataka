@{
}

<h1>Gett all</h1>

<div class="container pt-5">
    <div class="row">
        @*<div class="col-md-6">
            <a class="btn btn-dark" href="/Author/Add">+ Add more</a>
        </div>*@
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3>Authors</h3>

            <table  class="table table-stripped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Naziv</th>
                        <th>E-mail</th>
                        <th>Kontakt telefon</th>
                       @* <th>Lokacija</th>*@
                        <th>Adresa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model){
                    <tr>
                        <td>@item.Naziv</td>
                        <td>@item.Email</td>
                        <td>@item.KontaktTelefon</td>
                        @*<td>@item.Kategorije</td>*@
                        <td>@item.Adresa</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>